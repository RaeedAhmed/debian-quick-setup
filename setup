upgrade() {
sudo echo "deb http://deb.debian.org/debian/ unstable main contrib non-free
deb-src http://deb.debian.org/debian/ unstable main contrib non-free" > /etc/apt/sources.list

sudo apt -y update && sudo apt -y full-upgrade

sudo reboot
}

drivers() {
sudo apt -y install firmware-linux nvidia-driver gnome-core
sudo reboot
}

sources() {
sudo echo "deb http://deb.debian.org/debian/ testing main contrib non-free
deb-src http://deb.debian.org/debian/ testing main contrib non-free" >> /etc/apt/sources.list

sudo echo "Package: *
Pin: release a=unstable
Pin-Priority: 1000
 
Package: *
Pin: release a=testing
Pin-Priority: 100" >> /etc/apt/preferences
}

customize () {
sudo apt -y install gnome-tweaks breeze-cursor-theme papirus-icon-theme autoconf automake inkscape libgdk-pixbuf2.0-dev libglib2.0-dev libxml2-utils pkg-config sassc libmarco-dev parallel zip
git clone https://gitlab.com/tista500/plata-theme.git
cd plata-theme
./autogen.sh --prefix=/usr --enable-parallel --disable-cinnamon --disable-flashback --disable-xfce --disable-mate --disable-openbox
make
sudo make install
}

apps() {
sudo apt -y install python3-setuptools git sed mpv nim fzf pydf ncdu bpytop neofetch curl nnn tldr fonts-hack fonts-dejavu streamlink python3-venv kitty zsh tmux ripgrep rsync wakeonlan nmap bat exa gnome-screenshot gthumb micro

}

terminal () {
sudo apt remove gnome-terminal && sudo apt install python3-nautilus
pip3 install --user nautilus-open-any-terminal
glib-compile-schemas ~/.local/share/glib-2.0/schemas/
gsettings set com.github.stunkymonkey.nautilus-open-any-terminal terminal kitty  
}

dotfiles() {
echo '--theme="TwoDark"' > .config/bat/config
echo "map ctrl+tab nth_window -1
map ctrl+page_down previous_window
map ctrl+page_up next_window
map ctrl+shift+t new_window
map ctrl+shift+q close_window
map page_up scroll_page_up
map page_down scroll_page_down
enabled_layouts stack
os_window_size 80c 24c
sync_to_monitor yes
map ctrl+shift+a>m set_background_opacity +0.1
map ctrl+shift+a>l set_background_opacity -0.1
map ctrl+shift+a>d set_background_opacity default
dynamic_background_opacity yes
background_opacity .8
scrollback_lines 4000" > .config/kitty/kitty.conf
}